\end{figure}
\newpage
\textbf{Applying z-Transform:}\\
case -1 : 
\begin{align}
X(z)&=\sum_{n=-\infty}^{\infty}((-\frac{7}{2}\,)^{n-1}\,u(n)\,)\,z^{-n}\\
X(z)&=0+\sum_{n=0}^{\infty}((-\frac{7}{2}\,)^{n-1})\,z^{-n}\\
X(z)&=\sum_{n=0}^{\infty}((\ frac{2}{7})(-\frac{2}{7}\,)^{-n})\,z^{-n}\\
(\frac{2}{7})X(z)&=\sum_{n=0}^{\infty}((-\frac{2}{7}\,)^{-n})\,z^{-n}\\
(\frac{7}{2})X(z)&=\sum_{n=0}^{\infty}((-\frac{2z}{7}\,)^{-n})\,
\end{align}
For this to converge $|\frac{7}{2z}\,|<1$
\begin{align}
\implies -1<\frac{7}{2z}<1 \\
z \in (-\infty,-\frac{7}{2})\cup(\frac{7}{2},\infty)
\end{align}
Multiplying $-\frac{7}{2z}$ on both sides of equation 15
\begin{align}
-(\frac{7}{2z})(\frac{7}{2})X(z)&=\sum_{n=0}^{\infty}((-\frac{2z}{7}\,)^{-(n+1)})\,\\
-(\frac{7}{2z})(\frac{7}{2})X(z)&=\sum_{n=1}^{\infty}((-\frac{2z}{7}\,)^{-n})\,\\ 
-(\frac{7}{2z})(\frac{7}{2})X(z)&=-(-\frac{2z}{7}\,)^{-0}+\sum_{n=0}^{\infty}((-\frac{2z}{7}\,)^{-n})\,\\
-(\frac{7}{2z})(\frac{7}{2})X(z)&=-1+\sum_{n=0}^{\infty}((-\frac{2z}{7}\,)^{-n})\,
\end{align}
Subtracting eqn 15 from eqn 21
\begin{align}
(\frac{7}{2z}+1)(\frac{7}{2})X(z)&=1
\end{align}
\begin{align}
X(z)&=(\frac{2}{7})(\frac{2z}{2z+7})\\
\implies X(z)&=(\frac{1}{7})(\frac{4z}{2z+7}\,)
\end{align}
case -2 : 
\begin{align}
X(z)&=\sum_{n=-\infty}^{\infty}(-(\frac{7}{2}\,)^{n-1}\,u(n)\,)\,z^{-n}\\
X(z)&=0+\sum_{n=0}^{\infty}-((\frac{7}{2}\,)^{n-1})\,z^{-n}\\
X(z)&=\sum_{n=1}^{\infty}-((\frac{2}{7})(\frac{2}{7}\,)^{-n})\,z^{-n}\\
(\frac{7}{2})X(z)&=\sum_{n=0}^{\infty}-((\frac{2}{7}\,)^{-n})\,z^{-n}\\
(\frac{7}{2})X(z)&=\sum_{n=0}^{\infty}-((\frac{2z}{7}\,)^{-n})\,
\end{align}
For this to converge $|\frac{7}{2z}\,|<1$
\begin{align}
\implies -1<\frac{7}{2z}<1 \\
z \in (-\infty,-\frac{7}{2})\cup(\frac{7}{2},\infty)
\end{align}
Multiplying $\frac{7}{2z}$ on both sides of equation 29
\begin{align}
(\frac{7}{2z})(\frac{7}{2})X(z)&=\sum_{n=0}^{\infty}-((\frac{2z}{7}\,)^{-(n+1)})\,\\
(\frac{7}{2z})(\frac{7}{2})X(z)&=\sum_{n=1}^{\infty}-((\frac{2z}{7}\,)^{-n})\,\\ 
(\frac{7}{2z})(\frac{7}{2})X(z)&=-(-1)^{-1}+\sum_{n=1}^{\infty}-((\frac{2z}{7}\,)^{-n})\,\\
(\frac{7}{2z})(\frac{7}{2})X(z)&=1+\sum_{n=1}^{\infty}-((\frac{2z}{7}\,)^{-n})\,
\end{align}
Subtracting eqn 29 from eqn 35
\begin{align}
(\frac{7}{2z}-1)(\frac{7}{2})X(z)&=1
\end{align}
\begin{align}
X(z)&=(\frac{2}{7})(\frac{2z}{7-2z})\\
\implies X(z)&=(\frac{1}{7})(\frac{4z}{7-2z}\,)
\end{align}
